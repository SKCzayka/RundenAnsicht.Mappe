<Page x:Class="RundenAnsicht.Ansicht"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RundenAnsicht" 
      mc:Ignorable="d" FontFamily="Arial Black" 
      d:DesignHeight="450" d:DesignWidth="800" x:Name="Ans" DataContext="{Binding  viewModel,ElementName=Ans}"
      Title="Ansicht">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.ColumnSpan="3"  Grid.RowSpan="2">
            <StackPanel>

                <ItemsControl Name="Kampfrunde">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0,0,0,5">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="25"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <TextBlock Text="{Binding Name}" />
                                <TextBlock Grid.Row="1" Text="{Binding Init}" />
                                <TextBlock Grid.Row="2" Text="{Binding Typ}" />
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
            <StackPanel>
                <ItemsControl Name="Neue_Runde">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0,0,0,5">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <TextBlock Text="{Binding Name}" />
                                <TextBlock Grid.Row="1" Text="{Binding Initiv}" />
                                <TextBlock Grid.Row="2" Text="{Binding Typ}" />
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Grid>
            <Grid Grid.Row="3">
                <StackPanel>
                <Button Padding="10" Margin="20 5" Name="Next" Content="Weiter" Click="Next_Click"/>
                <Button Padding="10" Margin="20 5" Name="Round_Next" Content="Nächste Runde" Click="Round_Next_Click"/>
                <Button Padding="10" Margin="20 5" Name="Exit" Content="Beenden" Click="Exit_Click"/>
                </StackPanel>
           
        </Grid>
    </Grid>
</Page>
