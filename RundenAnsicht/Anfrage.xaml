<Page x:Class="RundenAnsicht.Anfrage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RundenAnsicht"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Anfrage">
    <Page.DataContext>
        <local:AnfrageViewModel/>
    </Page.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        
        <StackPanel Grid.Row="1" Grid.Column="1">
            <TextBox Text="Name des Helden oder Gegners"></TextBox>
            <TextBlock  Height="25"/>
            <TextBox Text="Name des Helden oder Gegners"></TextBox>
            <TextBlock  Height="25"/>
            <StackPanel Margin="25 5" Orientation="Horizontal">
                <RadioButton Margin="50 0" Content="Spieler"/>
                <RadioButton Margin="50 0" Content="Gegner"/>
            </StackPanel>
           
            <Button Margin="80 5" Content="Teilnehmer Hinzufügen" Name="Add" Click="Add_Click"/>
            <Button Margin="80 5" Content="Kampf Beginnen" Name="Start" Click="Start_Click"/>
        </StackPanel>
    </Grid>
</Page>
